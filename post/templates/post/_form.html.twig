{{ form_start(form) }}

	<div class="form-group">
        {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.name, {'attr': {'class': 'form-input'}}) }}
		
    </div>
	
	<div class="form-group">
	{{ form_row(form.content,{'attr': {'class': 'form-control'}}) }}
	{{ form_errors(form.content, {'attr': {'class': 'form-input'}}) }}
	
      </div>	  
    <button class="btn {{ button_color|default('btn-outline-primary') }}  mt-3">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}